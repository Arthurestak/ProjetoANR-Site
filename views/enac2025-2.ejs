<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="shortcut icon" href="/images/ANR LogoPequena.webp" type="image/x-icon">
  <title>ANR - ENAC 2025.2 - Materiais</title>
  <link rel="stylesheet" href="/styles.css">
  <link rel="stylesheet" href="/headerfooter.css">
  <style>
    .material-item { margin-bottom: 2rem; }
    iframe { width: 100%; height: 360px; border-radius: 8px; }
  </style>
</head>
<body>
  <%- include('./partials/headerNaoLogado.ejs') %>

  <main>
    <div class="container">
      <div class="card">
        <h1>ðŸ“˜ ENAC 2025.2 - Materiais</h1>
        <h1 class="h1azul">Tenha acesso aos conteÃºdos inseridos por nossos professores!</h1>
        <span class="spanContainer">PDFs e Videoaulas para turbinar seus estudos</span>
      </div>

      <div id="pdf-section" class="card"></div>
      <div id="video-section" class="card"></div>
    </div>
  </main>

  <%- include('./partials/footer.ejs') %>

  <script>
    async function fetchMateriais() {
      try {
        const res = await fetch('/materiais.json');
        const data = await res.json();

        const pdfSection = document.getElementById('pdf-section');
        const videoSection = document.getElementById('video-section');

        if (data.pdfs?.length) {
          const title = document.createElement('h2');
          title.textContent = "ðŸ“„ PDFs DisponÃ­veis";
          pdfSection.appendChild(title);

          data.pdfs.forEach(pdf => {
            const div = document.createElement('div');
            div.className = "material-item spanContainer";
            div.innerHTML = `<strong>${pdf.name}</strong><br><a href="${pdf.link}" target="_blank">Visualizar PDF</a>`;
            pdfSection.appendChild(div);
          });
        }

        if (data.videos?.length) {
          const title = document.createElement('h2');
          title.textContent = "ðŸŽ¬ Videoaulas";
          videoSection.appendChild(title);

          data.videos.forEach(video => {
            const title = document.createElement('h3');
            title.textContent = video.title;
            videoSection.appendChild(title);

            const frame = document.createElement('iframe');
            frame.src = video.url;
            frame.allowFullscreen = true;
            videoSection.appendChild(frame);
          });
        }
      } catch (error) {
        console.error("Erro ao buscar materiais:", error);
      }
    }

    fetchMateriais();
  </script>
  <script src="/scripts/script.js"></script>
</body>
</html>