<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro - ANR</title>
    <link rel="stylesheet" href="/signlogin.css">
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="/headerfooter.css">
    <link rel="shortcut icon" href="/images/ANR LogoPequena.webp" type="image/x-icon">
</head>

<body>
  <%- include('./partials/headerNaoLogado.ejs') %>
  <main>
    <div class="auth-container"> 
      <% if (success && success.length > 0) { %>
        <% success.forEach(msg => { %>
          <div class="flash success"><%= msg %></div>
        <% }) %>
      <% } %>
      
      <% if (errors && errors.length > 0) { %>
        <% errors.forEach(msg => { %>
          <div class="flash error"><%= msg %></div>
        <% }) %>
      <% } %>
      <h1>Cadastro</h1>
      <form action="/signup" method="POST">
        <label for="name">Nome:</label>
        <input type="text" id="name" name="name" required>

        <label for="email">E-mail:</label>
        <input type="email" id="email" name="email" required>

        <label for="password">Senha:</label>
        <input type="password" id="password" name="password" required>

        <button type="submit" class="btn-auth">Cadastrar</button>
      </form>
      <p>Já tem uma conta? <a href="/login">Faça login</a></p>
    </div>
  </main>
  <%- include('./partials/footer.ejs') %>

  <script src="/scripts/script.js"></script>
  <script src="/scripts/auth.js"></script>

</body>

</html>